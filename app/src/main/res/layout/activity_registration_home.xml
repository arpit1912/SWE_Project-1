<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/entry_photo_check1"
    tools:context=".RegistrationHomeActivity">

    <TextView

        android:layout_marginTop="100dp"

        android:id="@+id/reg_page_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help feed a soul, join us on our mission of zero hunger"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/baloobold"
        android:textColor="#d61a7b"
        />

    <Button
        android:id="@+id/reg_donor_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_page_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:onClick="openDonorRegistration"
        android:alpha="0.8"
        android:background="@drawable/button_layout_login"
        android:text="Register as DONOR" />

    <Button
        android:id="@+id/reg_organisation_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_donor_btn"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:onClick="openOrganisationRegistration"
        android:alpha=".8"
        android:background="@drawable/button_layout_login"
        android:text="Register as Organisation" />

</RelativeLayout>